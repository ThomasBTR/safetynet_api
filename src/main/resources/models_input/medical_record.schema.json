{
  "$id": "medical_record.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "medical record",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "birthdate": {
      "type": "string"
    },
    "medications": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z]{1,}:[0-9]{1,}mg$"
      }
    },
    "allergies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}